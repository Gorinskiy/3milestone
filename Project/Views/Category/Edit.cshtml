@model Project.Models.Entities.Category
@{
    ViewBag.Title = "Category Editing";
}
    <form asp-action="Edit" asp-controller="Category">
        <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
        <div class="form-group">
            <label class="control-label">Name</label>
            <input type="text" asp-for="CategoryName" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>