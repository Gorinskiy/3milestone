@model Project.ViewModels.BookAuthorCategoryModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" asp-controller="Book" asp-anti-forgery="true">
    <input type="hidden" asp-for="book.Id" value="@Model.book.Id" />
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" asp-for="book.Title" value="@Model.book.Title" />
    </div>
    <div class="form-group">
        <label>Author</label>
        <select class="form-control" asp-for="book.AuthorId">
            @foreach (var item in Model.authors)
            {
                <option value="@item.Id">@item.FullName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-outline-dark" />
        <a asp-action="EditCategory" asp-route-id="@Model.book.Id" class="btn btn-outline-dark" asp-controller="Book">Edit Category</a>
    </div>
</form>